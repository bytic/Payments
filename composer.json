{
  "name": "bytic/payments",
  "type": "library",
  "license": "MIT",
  "description": "Payments module for bytic library",
  "keywords": [],
  "homepage": "https://github.com/ByTIC/payments",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "autoload": {
    "psr-4": {
      "ByTIC\\Payments\\": "src/",
      "ByTIC\\Payments\\Legacy\\": "legacy/"
    },
    "files": [
      "src/Utility/general.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ByTIC\\Payments\\Tests\\": "tests/src",
      "ByTIC\\Payments\\Tests\\Fixtures\\": "tests/fixtures",
      "ByTIC\\Payments\\Mobilpay\\Tests\\Fixtures\\": "vendor/paytic/payments-mobilpay/tests/fixtures"
    }
  },
  "require": {
    "php": "^7.2|^8.0",
    "ext-zlib": "*",
    "bytic/package-base": "^1.0",
    "paytic/omnipay-paylike": "^3.0",
    "paytic/omnipay-romcard": "^3.0",
    "bytic/medialibrary": "^0.8|^0.9",
    "bytic/form": "^0.9|^1.0",
    "bytic/orm-behaviors": "^0.9|^1.0",
    "bytic/event-dispatcher": "^0.9|^1.0",
    "bytic/translation": "^0.9|^1.0",
    "bytic/models-smart-properties": "^0.9|^1.0",
    "bytic/view": "^0.9|^1.0",
    "php-http/httplug": "^1.0 || ^2.0",
    "psr/http-client": "^1.0",
    "symfony/var-dumper": "^5.2"
  },
  "require-dev": {
    "bytic/facebook-pixel": "^1.0",
    "bytic/phpqatools": "^1.0",
    "paytic/payments-gateways": "^1.0",
    "paytic/payments-tests": "^1.0.10"
  },
  "suggest": {
    "bytic/facebook-pixel": "^1.0"
  },
  "scripts": {
    "tests": [
      "@analyse",
      "@test"
    ],
    "test": [
      "phpunit"
    ],
    "analyse": [
      "@stan",
      "@psalm"
    ],
    "stan": "phpstan analyse",
    "psalm": "psalm --output-format=compact --find-dead-code --find-unused-psalm-suppress --long-progress "
  }
}
